# Use if running the server with mod-wsgi
# Add this file to apache sites-enabled
# Also add to apache ports.conf: Listen 8139
<VirtualHost *:8139>
    ServerName nlp.localhost

    WSGIDaemonProcess nlpserver user=anup group=www-data threads=5
    WSGIScriptAlias / /home/anup/public_html/tf/anup-mgame-nov/www/protected/extensions/nlp/python/nlpserver/nlpserver.wsgi

    <Directory /home/anup/public_html/tf/anup-mgame-nov/www/protected/extensions/nlp/python/nlpserver/>
        WSGIProcessGroup nlpserver
        WSGIApplicationGroup %{GLOBAL}
        WSGIScriptReloading On
        Order deny,allow
        Allow from all
    </Directory>
</VirtualHost>
